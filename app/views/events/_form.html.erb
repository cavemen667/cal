      <%= f.label :time , "Time:" %>
      <%= f.time_field :time, :class=>"form_fields" %>
    </span>
    <span id="event_description">
      <%= f.label :text , "Description", :class=>"form_fields" %>
      <%= f.text_area :text %>
    </span>
   <span>
    <%= f.submit%>
    </span>
    <span>
      <%= f.date_field :date, :id=>"date_field" %>
    </span> 
  </div>
<% end %>
